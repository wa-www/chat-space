.side
  .user
    .user__header
      .name
        = current_user.name
      .icon
        =link_to new_group_path, data: {"turbolinks" => false}, class: "icon__btn" do
          = fa_icon 'edit'
        =link_to edit_user_path(current_user), data: {"turbolinks" => false}, class: "icon__btn" do
          = fa_icon 'cog'

  .content
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group), data: {"turbolinks" => false} do
          .group__name
            = group.name
          .group__text
            = group.show_last_message

    
 