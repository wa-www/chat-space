= form_for group do |f|
  - if group.errors.any?
    .chat-group-form__errors
      %h2= "#{group.errors.full_messages.count}件のエラーが発生しました。"
      %ul
        - group.errors.full_messages.each do |message|
          %li= message
  .chat-group-form__field
    .chat-group-form__field--left
      = f.label :name, class: 'chat-group-form__label'
    .chat-group-form__field--right
      = f.text_field :name, class: 'chat__group_name chat-group-form__input', placeholder: 'グループ名を入力してください'
      = f.hidden_field :id, class: "chat__group_id", value: group.id 
  .chat-group-form__field.clearfix
    / この部分はインクリメンタルサーチ（ユーザー追加の非同期化のときに使用します
  .chat-group-form__field.clearfix
    .chat-group-form__field--left
      %label.chat-group-form__label{:for => "chat_group_チャットメンバーを追加"} チャットメンバーを追加
    .chat-group-form__field--right
      -# = f.label "チャットメンバー", class: "chat-group-form__label"
      / グループ作成機能の追加時はここにcollection_check_boxesの記述を入れてください
      -# = f.collection_check_boxes :user_ids, User.all, :id, :name
      / この部分はインクリメンタルサーチ（ユーザー追加の非同期化のときに使用します
      .chat-group-form__search.clearfix
        %input#user-search-field.chat-group-form__input{:placeholder=>"追加したいユーザー名を入力してください", :type=>'text'}
      #user-search-result

  -# .chat-group-user
  -#   %input{:name='group[user_ids][]', :type='hidden', :value='ユーザーのid'}
  -#   %p.chat-group-user__name ユーザー名
  -#   %div.user-search-remove.chat-group-user__btn.chat-group-user__btn--remove.js-remove-btn 削除 →いらない！jsに追加！
  .chat-group-form__field.clearfix
    .chat-group-form__field--left
      = f.label "チャットメンバー", class: "chat-group-form__label"
    .chat-group-form__field--right
      .chat-members
        .chat-group-user.clearfix.js-chat-member{id: "#{current_user.id}"}
          %input{name: 'group[user_ids][]', type: 'hidden', value: "#{current_user.id}"}
          %p.chat-group-user__name
            = current_user.name
        - group.users.each do |group_user|
          - if group_user.id != current_user.id
            .chat-group-user.clearfix.js-chat-member{id: "#{group_user.id}"}
              %input{name: 'group[user_ids][]', type: 'hidden', value: "#{group_user.id}"}
              %p.chat-group-user__name
                = group_user.name
              %a.user-search-remove.chat-group-user__btn.chat-group-user__btn--remove.js-remove-btn
                削除
          #user_append



  .chat-group-form__field.clearfix
    .chat-group-form__field--left
    .chat-group-form__field--right
      = f.submit class: 'chat-group-form__action-btn'